<h1><%= title %></h1>

<form action="/offers" method="post">

  <div class="group">
    <label for="offerIdForTesting">Offer Id</label>
    <input id="offerIdForTesting" name="offerIdForTesting" autofocus placeholder="e.g. 18036">
  </div>

  <div class="group">
    <label for="descriptionForTesting">Description</label>
    <input id="descriptionForTesting" name="descriptionForTesting" required autofocus placeholder="e.g. Example offer">
  </div>

  <div class="group">
    <label for="benefitToCustomer">Benefit</label>

    <select id="benefitToCustomer" name="benefitToCustomer">
      <% benefitToCustomerOptions.forEach((benefit) => { %>
        <option><%= benefit %></option>
      <% }) %>
    </select>
  </div>

  <div class="group"></div>
    <label for="rebateAmount">Rebate amount</label>
    <input type="number" id="rebateAmount" name="rebateAmount" step="0.01" placeholder="e.g. 2.00" required>
    <div class="note">
      <p class="info">For values involving percentages, use <br>decimal numbers (e.g. <code>0.1</code> for 10%).</p><br>
    </div>
  </div>

  <div class="group">
    <label for="merchantId">Merchant Id</label>
    <input id="merchantId" name="merchantId" required>
  </div>

  <div class="group">
    <label for="validFromDate">Valid From</label>
    <input id="validFromDate" name="validFromDate" type="date" required>
  </div>

  <div class="group">
    <label for="validToDate">Valid To</label>
    <input id="validToDate" name="validToDate" type="date" required>
  </div>

  <div class="group">
    <label for="redemptionPeriodInDays">Redemption Period (Days)</label>
    <input id="redemptionPeriodInDays" name="redemptionPeriodInDays" required value="30" placeholder="e.g. 30">
  </div>

  <!-- Refund specific field - could hide/show based on isTrackingRefunds -->
  <div class="group">
    <label for="refundPeriodInDays">Refund Period (Days)</label>
    <input id="refundPeriodInDays" name="refundPeriodInDays" required value="30" placeholder="e.g. 30">
  </div>

  <div class="group">
    <label for="redemptionLimitType">Redemption Limit Type</label>
    <select name="redemptionLimitType">
      <option value="overall">Over All</option>
      <option value="per card">Per Card</option>
    </select>
  </div>

  <div class="group">
    <label for="redemptionLimit">Redemption Limit</label>
    <input type="number" name="redemptionLimit" min="0" step="1" placeholder="e.g. 2" value="100" required>
  </div>

  <!-- Redemption -->
  <div class="group">
    <label for="isRedeemable">Redeemable</label>
    <input name="isRedeemable" type="checkbox" checked>
  </div>

  <!-- Targeted -->
  <div class="group">
    <label for="requiresCustomerToBeTargeted">Targeted</label>
    <input name="requiresCustomerToBeTargeted" type="checkbox" checked>
  </div>

  <!-- Requires Linking -->
  <div class="group">
    <label for="requiresCustomerToBeLinked">Requires Linking</label>
    <input name="requiresCustomerToBeLinked" type="checkbox" checked>
  </div>

  <!-- Activated -->
  <div class="group">
    <label for="hasBeenActivated">Activated</label>
    <input name="hasBeenActivated" type="checkbox" checked>
  </div>

  <div class="actions">
    <input type="submit" value="Create">
  </div>
</form>

<script>
  var validFrom = new Date();
  var validTo = new Date();
  validTo.setDate(validTo.getDate() + 30);

  document.querySelector("#validFromDate").value = validFrom.toISOString().substr(0, 10);
  document.querySelector("#validToDate").value = validTo.toISOString().substr(0, 10);
</script>
